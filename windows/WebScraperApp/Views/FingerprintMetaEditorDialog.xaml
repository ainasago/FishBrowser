<Window x:Class="FishBrowser.WPF.Views.FingerprintMetaEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="从元配置生成指纹" Height="520" Width="780"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="名称:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="NameBox" Width="280"/>
            <TextBlock Text="  (用于生成的 FingerprintProfile 名称)" VerticalAlignment="Center" Foreground="#666" Margin="8,0,0,0"/>
        </StackPanel>

        <DockPanel Grid.Row="1">
            <TextBlock Text="Traits JSON (key -> value):" DockPanel.Dock="Top"/>
            <TextBox x:Name="JsonBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" FontFamily="Consolas" TextWrapping="NoWrap"/>
        </DockPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="取消" Width="90" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="生成并保存" Width="120" Background="#107C10" Foreground="White" Click="Generate_Click"/>
        </StackPanel>
    </Grid>
</Window>
