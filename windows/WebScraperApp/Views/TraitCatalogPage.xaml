<Page x:Class="FishBrowser.WPF.Views.TraitCatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="指纹元目录">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="10">
            <TextBlock Text="搜索:" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchBox" Width="260" Margin="8,0,0,0" TextChanged="SearchBox_TextChanged"/>
            <Separator Width="16" Opacity="0"/>
            <CheckBox x:Name="RequiredCheck" Content="仅必需" Margin="6,0,0,0" VerticalAlignment="Center" Checked="FilterCheck_Changed" Unchecked="FilterCheck_Changed"/>
            <CheckBox x:Name="ExperimentalCheck" Content="仅实验" Margin="6,0,0,0" VerticalAlignment="Center" Checked="FilterCheck_Changed" Unchecked="FilterCheck_Changed"/>
            <CheckBox x:Name="RandomizableCheck" Content="仅可随机" Margin="6,0,0,0" VerticalAlignment="Center" Checked="FilterCheck_Changed" Unchecked="FilterCheck_Changed"/>
        </DockPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1">
                <TreeView x:Name="CategoryTree" SelectedItemChanged="CategoryTree_SelectedItemChanged">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>

            <Border Grid.Column="2" BorderBrush="#DDD" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="TraitGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True"
                              AlternationCount="2" HeadersVisibility="Column" CanUserAddRows="False"
                              SelectionChanged="TraitGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="键(Key)" Binding="{Binding Key}" Width="2*"/>
                            <DataGridTextColumn Header="名称" Binding="{Binding DisplayName}" Width="*"/>
                            <DataGridTextColumn Header="类型" Binding="{Binding ValueType}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <GroupBox Grid.Row="1" Header="详情" Margin="8,8,8,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="6,2,6,2">
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                    <TextBlock Text="Key:" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="KeyText"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                    <TextBlock Text="名称:" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="NameText"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                    <TextBlock Text="类型:" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="TypeText"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                    <TextBlock Text="默认值:" FontWeight="Bold" Width="80"/>
                                    <TextBlock x:Name="DefaultText" TextWrapping="Wrap" Width="200"/>
                                </StackPanel>
                            </StackPanel>

                            <DataGrid x:Name="OptionGrid" Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="6,0,0,0"
                                      AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="标签" Binding="{Binding Label}" Width="2*"/>
                                    <DataGridTextColumn Header="权重" Binding="{Binding Weight}" Width="80"/>
                                    <DataGridTextColumn Header="Region" Binding="{Binding Region}" Width="100"/>
                                    <DataGridTextColumn Header="Vendor" Binding="{Binding Vendor}" Width="100"/>
                                    <DataGridTextColumn Header="DeviceClass" Binding="{Binding DeviceClass}" Width="100"/>
                                    <DataGridTextColumn Header="值 (JSON)" Binding="{Binding ValueJson}" Width="3*"/>
                                    <DataGridTemplateColumn Header="操作" Width="260">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="复制值" Padding="6,2" Margin="0,0,6,0" Click="OptionCopyValue_Click"/>
                                                    <Button Content="复制为条目" Padding="6,2" Click="OptionCopyAsEntry_Click"/>
                                                    <Button Content="发送到编辑器" Padding="6,2" Margin="6,0,0,0" Click="OptionSendToEditor_Click"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Border>
        </Grid>

        <DockPanel Grid.Row="2" Margin="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="约束:" FontWeight="Bold"/>
                <TextBlock x:Name="ConstraintsText" Margin="6,0,12,0" TextTrimming="CharacterEllipsis" Width="150"/>
                <Button Content="复制" Padding="6,2" Margin="0,0,12,0" Click="CopyConstraints_Click"/>
                <TextBlock Text="依赖:" FontWeight="Bold"/>
                <TextBlock x:Name="DepsText" Margin="6,0,12,0" TextTrimming="CharacterEllipsis" Width="150"/>
                <Button Content="复制" Padding="6,2" Margin="0,0,12,0" Click="CopyDeps_Click"/>
                <TextBlock Text="冲突:" FontWeight="Bold"/>
                <TextBlock x:Name="ConflictsText" Margin="6,0,12,0" TextTrimming="CharacterEllipsis" Width="150"/>
                <Button Content="复制" Padding="6,2" Margin="0,0,12,0" Click="CopyConflicts_Click"/>
                <TextBlock Text="分布:" FontWeight="Bold"/>
                <TextBlock x:Name="DistText" Margin="6,0,12,0" TextTrimming="CharacterEllipsis" Width="150"/>
                <Button Content="复制" Padding="6,2" Click="CopyDist_Click"/>
            </StackPanel>
            <TextBlock x:Name="StatusText" DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</Page>